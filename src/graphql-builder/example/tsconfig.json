{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "lib": ["es2015", "es2016", "dom"],
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "graphql-builder": ["../src"],
      "@graphql-builder/logger": ["../../../packages/logger/src"],
      "@graphql-builder/schema": ["../../../packages/schema/src"],
      "@graphql-builder/utils": ["../../../packages/utils/src"],
      "@graphql-builder/react": ["../../../packages/react/src"]
    }
  }
}
